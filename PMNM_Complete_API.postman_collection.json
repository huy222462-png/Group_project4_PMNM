          },
          "response": []
        },
        {
          "name": "Reset Password",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"password\": \"newpassword123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/reset-password/:token",
              "host": ["{{baseUrl}}"],
              "path": ["api", "reset-password", ":token"],
              "variable": [
                {
                  "key": "token",
                  "value": "your-reset-token-here",
                  "description": "Reset token from email or console"
                }
              ]
            }
          },
          "response": []
        }
      ]
    },
    {
